# Production Environment Configuration for FutureSync

# Database Configuration
DATABASE_HOST=your-postgres-host.amazonaws.com
DATABASE_PORT=5432
DATABASE_NAME=futurasync_production
DATABASE_USERNAME=futurasync_user
DATABASE_PASSWORD=your-secure-database-password
DATABASE_MAX_CONNECTIONS=20
DATABASE_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=10000
DATABASE_STATEMENT_TIMEOUT=30000
DATABASE_QUERY_TIMEOUT=25000

# SSL Configuration for Production Database
DATABASE_CA_CERT=-----BEGIN CERTIFICATE-----...-----END CERTIFICATE-----
DATABASE_CLIENT_KEY=-----BEGIN PRIVATE KEY-----...-----END PRIVATE KEY-----
DATABASE_CLIENT_CERT=-----BEGIN CERTIFICATE-----...-----END CERTIFICATE-----

# NextAuth Configuration
NEXTAUTH_URL=https://app.futurasync.com
NEXTAUTH_SECRET=your-super-secure-nextauth-secret-min-32-chars

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GITHUB_ID=your-github-oauth-client-id
GITHUB_SECRET=your-github-oauth-client-secret

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key
NEXT_PUBLIC_AI_ENABLED=true
NEXT_PUBLIC_AI_PROVIDER=openai
NEXT_PUBLIC_AI_MODEL=gpt-4o-mini
NEXT_PUBLIC_DEBUG_AI=false

# Application Settings
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://app.futurasync.com
NEXT_PUBLIC_API_URL=https://app.futurasync.com/api

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-for-error-tracking
ANALYTICS_API_KEY=your-analytics-api-key

# Storage Configuration (for file uploads, exports)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=futurasync-user-exports

# Email Configuration (for notifications)
SMTP_HOST=smtp.yourmailprovider.com
SMTP_PORT=587
SMTP_USER=noreply@futurasync.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=FutureSync <noreply@futurasync.com>

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://your-redis-host:6379
REDIS_PASSWORD=your-redis-password

# Stripe Configuration (for subscriptions)
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_MAX_AGE=31536000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Feature Flags
FEATURE_COMMUNITY_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_TEAM_FEATURES_ENABLED=true
FEATURE_ADVANCED_AI_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/futurasync/app.log

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/api/db/health

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=futurasync-backups