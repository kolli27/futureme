# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Optional: AI Configuration
NEXT_PUBLIC_AI_ENABLED=true
NEXT_PUBLIC_AI_PROVIDER=openai
NEXT_PUBLIC_AI_MODEL=gpt-4o-mini

# Development Settings
NEXT_PUBLIC_DEBUG_AI=false

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here-change-in-production-minimum-32-characters

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=futurasync
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-database-password
DATABASE_MAX_CONNECTIONS=20
DATABASE_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=10000
DATABASE_STATEMENT_TIMEOUT=30000
DATABASE_QUERY_TIMEOUT=25000

# Production Database SSL (for managed services)
# DATABASE_CA_CERT=
# DATABASE_CLIENT_KEY=
# DATABASE_CLIENT_CERT=

# OAuth Providers (get these from respective provider consoles)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_ID=your-github-client-id
GITHUB_SECRET=your-github-client-secret
APPLE_ID=your-apple-client-id
APPLE_SECRET=your-apple-client-secret

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=noreply@futureme.app
SMTP_REPLY_TO=support@futureme.app

# Email Service Alternatives
# For SendGrid:
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key

# For Mailgun:
# SMTP_HOST=smtp.mailgun.org
# SMTP_PORT=587
# SMTP_USER=your-mailgun-username
# SMTP_PASS=your-mailgun-password

# Security Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_WINDOW_MINUTES=15
EMAIL_VERIFICATION_EXPIRES_HOURS=24
PASSWORD_RESET_EXPIRES_HOURS=1

# Rate Limiting
REGISTRATION_RATE_LIMIT_PER_HOUR=5
PASSWORD_RESET_RATE_LIMIT_PER_HOUR=3

# Feature Flags
REQUIRE_EMAIL_VERIFICATION=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_PASSWORD_LOGIN=true

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRO_PRICE_ID=price_pro_annual_2999
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_annual_9999

# Subscription Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000